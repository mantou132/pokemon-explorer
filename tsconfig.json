{
  "compilerOptions": {
    "baseUrl": "./",
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "target": "ES2018",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "paths": {
      "src": ["src"]
    }
  },
  "include": ["src"]
}
